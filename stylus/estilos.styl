/*------------------------------------*\
    $TIPOGRAFÍA
\*------------------------------------*/
.display4
	font-size 112px
	font-weight 300
	color rgba(#000000,.54) 
.display3
	font-size 56px
	font-weight 400
	color rgba(#000000,.54)
.display2
	font-size 45px
	font-weight 400
	color rgba(#000000,.54)
.display1
	font-size 34px
	font-weight 400
	color rgba(#000000,.54)
.headline
	font-size 24px
	font-weight 400
	color rgba(#000000,.87)
.title
	font-size 20px
	font-weight 500
	color rgba(#000000,.87)
.subhead
	font-size 16px
	font-weight 400
	color rgba(#000000,.87)
	line-height 24px
.body2
	font-size 14px
	font-weight 500
	color rgba(#000000,.87)
.body1
	font-size 14px
	font-weight 400
.caption
	font-size 15px
	font-weight 400
	color rgba(#000000,.54)
/**
 * La clase de estos dos tipos de fuente llevan
 * -font al final, mientras que todos los demás
 * no lo llevan
 */
.menu-font
	font-size 14rem
	font-weight medium
	color rgba(#000000,.87)
 .button-font
 	font-size 14rem
	font-weight medium
	color rgba(#000000,.87)
	text-transform uppercase





/*------------------------------------*\
    $COLORES
\*------------------------------------*/
primary-color = #FF5722
secundary-color = #009688

.primary-text 
