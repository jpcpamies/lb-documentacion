/*------------------------------------*\
    $UTILIDADES
\*------------------------------------*/
.u-wrapper 
	margin 0 auto
	padding-right gutter
	padding-left gutter
	max-width 960px
	box-sizing border-box
	-webkit-box-sizing border-box
	-moz-box-sizing border-box
	position relative



/*------------------------------------*\
    $ELEMENTOS
\*------------------------------------*/
body
	font-family 'Roboto', sans-serif
	font-size 16px
	background-color #FAFAFA
