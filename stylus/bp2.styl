/*------------------------------------*\
    $GRID Y MÁRGENES
\*------------------------------------*/
gutter = 24px

.grid-inner
	margin-top 80px
	max-width 100%
.grid-inner--middle
	max-width 760px
	margin-right auto
	margin-left auto
.grid-inner--header
	margin-top 0
	margin-bottom 0




/*------------------------------------*\
    $LAYOUT
\*------------------------------------*/
/**
 * ^header
 */
.main-header
	.display-outer
		padding 115px 0 64px gutter 
.header-home
	background: url(../img/hero@2x.jpg);
	background-repeat: no-repeat;
	background-position: center;
	background-size: cover;
/**
 * ^home ^header-home ^header-caption
 */
.header-caption
	padding-top (gutter*3)
	padding-bottom (gutter*5)

/**
 * ^intro ^text
 */
.chapter-intro
	padding-right 38px
	padding-bottom 40px

/**
 * ^intro ^nav
 */
.chapter-nav
	display block
	border-left 5px solid
	border-left-color light-color
	padding-left 20px
	margin-bottom 48px
	.chapter-nav--headline
		line-height 16px
		padding-bottom 12px
	.chapter-nav--list
		padding-left 0
		margin-top 0
		list-style none
		a
			text-decoration none
			line-height 40px

/**
 * ^article ^module ^body
 */
.module-body
	width 560px

/**
 * ^article ^module ^figure-group ^media 
 */
.figure-row
	display -webkit-box
  	display -webkit-flex
 	display -moz-flex
  	display -ms-flexbox
  	display flex
	justify-content center
	

/**
 * ^home ^footer
 */
.footer-inner
	padding-top (gutter*3)
	padding-bottom (gutter*3)
	
.footer__cta
	font-weight 400
	margin-bottom .4em
	font-size 24px
.footer__button
	a
		font-size 20px
		
.footer-nav__middle
	position relative
	display table
	width 100%
	.footer-nav__middle--next
		box-sizing border-box
		// padding-top (gutter*1.5)
		// padding-right (gutter*3)
		// padding-bottom (gutter*1.5)
		width 48.7%
		display table-cell
		.next
			text-align right
			span
				color rgba(#000000,.87)
				margin-right (gutter*1.3)
			p
				color white
				font-size 18px
				line-height 1.4em
				font-weight 500
				&:after
					content '\eddb'
					font-family icomoon
					margin-left 10px
	.footer-nav__middle--previous
		width 48.7%
		display table-cell
		position relative
		bottom 0px
		padding-top (gutter*1)
		.previous
			text-align left
			span
				display block
				color rgba(#000000,.87)
				margin-left (gutter*1.2)
			p.big
				display block	
				color white
				font-size 18px
				line-height 1.4em
				font-weight 500
				&:before
					content '\eddf'
					font-family icomoon
					margin-right 10px
			p.small
				display none
					

		.previous
		text-align left
		span
			color rgba(#000000,.87)
			margin-left (gutter*1.5)
		p
			color white
			font-size 18px
			line-height 1.4em
			font-weight 500
			&:before
				content '\eddf'
				font-family icomoon
				margin-right 10px
		










