.display1
	font-size 34px
	line-height 1.5em
	font-weight 300
.headline
	font-size 24px
	line-height 32px
	font-weight 400
.subhead
	font-size 20px
	line-height 32px
	font-weight 400





/*------------------------------------*\
    $LAYOUT 
\*------------------------------------*/
/**
 * ^header
 */
.header-chapter__background
	padding-top (gutter*3)
	padding-bottom (gutter*1)
.header-chapter__background--chapter1
	background-color primaryA
.header-chapter__background--chapter2
	background-color primaryB
.header-chapter__background--chapter3
	background-color primaryC
.nav-chapter
	position relative
	top -(gutter*1.5)
	a
		text-decoration none
	.home
		font-size 16px
		letter-spacing 1px
		&:before
			content '\edc2'
			font-family icomoon
			margin-right 5px



/**
 * ^chapter-main
 */
.chapter-main__outer
	padding-top 60px
	padding-bottom 40px
.chapter__intro
	padding-bottom (gutter*2)



/**
 * ^chapter-nav
 */
.chapter__nav
	display block
	border-left 5px solid
	padding-left 20px
	margin-bottom 48px
	&.chapter__nav--1
		border-left 5px solid rgba(primaryA,.5)
	&.chapter__nav--2
		border-left 5px solid rgba(primaryB,.5)
	&.chapter__nav--3
		border-left 5px solid rgba(primaryC,.5)
	.caption__nav
		font-size 15px
		font-weight 400
		line-height 24px
		padding-bottom 12px
		color caption-text
		margin-top 0
		margin-bottom 0
	.chapter__nav--list
		padding-left 0
		margin-top 0
		list-style none
		a
			text-decoration none
			line-height 40px
			


/**
 * ^article
 */
.article-list
	padding-top 40px
.article__post
	border-bottom 1px solid divider
	padding-bottom (gutter*4)
	&:last-child
		border-bottom none
		padding-bottom 0
.article__title
	padding-top 30px
.body-module
	max-width 560px
	&:last-child
		margin-bottom 40px
.article__subtitle
	padding-top 20px

	

/**
 * ^article ^table
 */
.module__figure--table
	text-align left
.table__item
	list-style none
.table__header
	background-color rgba(black,.1)
	padding-top (gutter/2) 
	padding-bottom (gutter/2) 
	padding-right (gutter) 
	padding-left (gutter) 
	border-radius 3px
.table__list
	padding-top (gutter/2) 
	padding-bottom (gutter/2) 
.table__item
	padding-right (gutter*2) 
	padding-left (gutter*2) 
	&:before
		content '\eec6'
		font-family icomoon
		margin-right (gutter/2)
		color secundary-text
	&:nth-child(even)
		background-color rgba(black,.05)
		border-radius 3px
	&:nth-child(odd)
		padding-top (gutter/2) 
		padding-bottom (gutter/2) 
	a
		text-decoration none
		color secundary-text
		line-height 30px
		


/**
 * ^article ^figure
 */
.module__figure
	text-align center
.figure__small
	display inline-block
	margin-top 0
	margin-right 0
	margin-left 0
	margin-bottom 60px
	max-width 300px	
	img
		max-width 260px
.caption-text
	text-align left



