/*------------------------------------*\
    $LAYOUT 
\*------------------------------------*/
/**
 * ^header
 */
.header-chapter__background
	background-color primaryA
	padding-top (gutter*3)
	padding-bottom (gutter*1)
.nav-chapter
	position relative
	top -(gutter*1.5)
	a
		text-decoration none
	.home
		font-size 16px
		letter-spacing 1px
		&:before
			content '\edc2'
			font-family icomoon
			margin-right 5px



/**
 * ^chapter-main
 */
.chapter-main__outer
	padding-top 60px
	padding-bottom 40px
.chapter__intro
	padding-bottom (gutter*2)



/**
 * ^chapter-main
 */
.chapter__nav
	display block
	border-left 5px solid
	padding-left 20px
	margin-bottom 48px
	&.chapter__nav--1
		border-left 5px solid rgba(primaryA,.5)
	.caption__nav
		font-size 15px
		font-weight 400
		line-height 24px
		padding-bottom 12px
		color caption-text
		margin-top 0
		margin-bottom 0
	.chapter__nav--list
		padding-left 0
		margin-top 0
		list-style none
		a
			text-decoration none
			line-height 40px
			


/**
 * ^article
 */
.article-list
	padding-top 40px
	padding-bottom 60px
.body-module
	max-width 560px
	&:last-child
		margin-bottom 40px
.article__subtitle
	padding-top 20px
	

/**
 * ^article ^table
 */
.table__item
	list-style none
.table__header
	background-color rgba(black,.1)
	padding-top (gutter/2) 
	padding-bottom (gutter/2) 
	padding-right (gutter) 
	padding-left (gutter) 
	border-radius 3px
.table__list
	padding-top (gutter/2) 
	padding-bottom (gutter/2) 
.table__item
	padding-top (gutter/2) 
	padding-bottom (gutter/2) 
	padding-right (gutter*2) 
	padding-left (gutter*2) 
	&:nth-child(even)
		background-color rgba(black,.05)
		border-radius 3px
	a
		text-decoration none
		color secundary-text
		line-height 30px
		


/**
 * ^article ^caption__module
 */
.caption__module
	margin-top 30px	
	



